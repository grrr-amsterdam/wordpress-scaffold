<article class="{{ post.post_type }}-single" id="single-{{ post.ID }}">
    <figure>
        <img src="{{ post.thumbnail.src|resize(1200, 300) }}" alt="">
    </figure>

    {% include 'partials/page-header.twig' with {
        title: post.title,
    } only %}

    {{ post.content|raw }}
</article>
