<article class="{{ post.post_type }}-single" id="single-{{ post.ID }}">

    <figure>
        <img src="{{ post.thumbnail.src('image--medium') }}"
            srcset="{{ post.thumbnail.srcset('image--medium') }}"
            sizes="(min-width: 1280px) 1280px, 100vw"
            width="{{ post.thumbnail.width }}"
            height="{{ post.thumbnail.height }}"
            alt="{{ post.thumbnail.alt }}"/>
    </figure>

    {% include 'partials/page-header.twig' with {
        title: post.title,
    } only %}

    {{ post.content }}

</article>

{#
 # Render structured data if available.
 #}
{{ structured_data(post)|raw }}
