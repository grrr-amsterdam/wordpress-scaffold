namespace :cache do

  desc 'Reload PHP-FPM'
  task :fpm_reload do
    on roles(:web) do
      if test "[ type \"service rh-php71-php-fpm status\" > /dev/null 2>&1 ]"
        puts "Reloading PHP-FPM"
        execute :service, 'rh-php71-php-fpm', :status
      else
        puts "Cannot reload PHP-FPM"
      end
    end
  end

  desc 'Reload Apache'
  task :apache_reload do
    on roles(:web), in: :sequence, wait: 5 do
      execute :sudo, :service, :apache2, :reload
    end
  end

end
