# Reload PHP-FPM
desc 'Reload PHP-FPM'
task :fpm_reload do
  on roles(:app) do
    if test "[ type \"service rh-php56-php-fpm status\" > /dev/null 2>&1 ]"
      puts "Reloading PHP-FPM"
      execute :service, 'rh-php56-php-fpm', :status
    else
      puts "Cannot reload PHP-FPM"
    end
  end
end
