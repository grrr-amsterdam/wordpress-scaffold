{
  "name": "grrr-amsterdam/wordpress-scaffold",
  "type": "project",
  "description": "WordPress scaffold with theme",
  "homepage": "https://grrr.nl/",
  "authors": [
    {
      "name": "Ramiro Hammen",
      "email": "ramiro@grrr.nl"
    },
    {
      "name": "Koen Schaft",
      "email": "koen@grrr.nl"
    }
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.2.0",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.7.5",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "roots/soil": "^3.7",
    "wpackagist-plugin/w3-total-cache": "0.9.5.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1",
    "wp-cli/wp-cli": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Grrr\\Warp\\" : "lib/"
    }
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"copy('.env.template', '.env');\"",
      "Grrr\\Warp\\PostCreateProject::setup"
    ],
    "test": [
      "vendor/bin/phpcs"
    ]
  }
}
