{
  "name": "grrr-amsterdam/wordpress-scaffold",
  "type": "project",
  "description": "A modern WordPress scaffold",
  "license": "BSD-3-Clause",
  "homepage": "https://grrr.nl/",
  "authors": [
    {
      "name": "Ramiro Hammen",
      "email": "ramiro@grrr.nl"
    },
    {
      "name": "Koen Schaft",
      "email": "koen@grrr.nl"
    }
  ],
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.2.0",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "^4.8.0",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "^1.0.0",
    "roots/soil": "^3.7",
    "wpackagist-plugin/acf-content-analysis-for-yoast-seo": "^1.2",
    "wpackagist-plugin/admin-menu-editor": "^1.6",
    "wpackagist-plugin/ajax-thumbnail-rebuild": "^1.12",
    "wpackagist-plugin/amazon-s3-and-cloudfront": "^1.0",
    "wpackagist-plugin/amazon-web-services": "^1.0",
    "wpackagist-plugin/simple-page-ordering": "^2.2",
    "wpackagist-plugin/thumbnail-upscale": "^1.1",
    "wpackagist-plugin/w3-total-cache": "^0.9.5.4",
    "wpackagist-plugin/wordpress-seo": "^4.9",
    "wpackagist-plugin/wp-ses": "^0.7.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1",
    "wp-cli/wp-cli": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Grrr\\Warp\\" : "lib/"
    }
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-create-project-cmd": [
      "Grrr\\Warp\\PostCreateProject::setup"
    ],
    "test": [
      "vendor/bin/phpcs"
    ]
  }
}
